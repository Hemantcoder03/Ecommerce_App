<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productLL"
    android:layout_width="@dimen/_135sdp"
    android:layout_height="@dimen/_180sdp"
    android:background="@drawable/product_border"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_5sdp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ImageRoundedSquare"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/productNotFound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/no_image_icon"
        android:background="#76E0EF"
        android:layout_margin="@dimen/_5sdp"
        app:shapeAppearanceOverlay="@style/ImageRoundedSquare"
        android:visibility="gone" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:lines="1"
        android:text="@string/product_name"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:text="@string/_10"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />
</LinearLayout>